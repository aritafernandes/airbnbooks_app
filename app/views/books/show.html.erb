
<div class="container justify-content-start mt-4 ">
  <%= link_to books_path do %>
    <i class="fa-solid fa-arrow-left-long fa-2xl" style="color:#333"></i>
  <% end %>
</div>
<div class="container d-flex flex-column">
  <div class="row justify-content-center">
    <div class="col-10 d-flex bg-white border-2 rounded-3 my-3 shadow p-4">
      <div class= "my-4 rounded mx-auto d-flex flex-column align-items-center">
        <% if @book.photo.attached? %>
          <%= cl_image_tag @book.photo.key, height: 300, class: "shadow" %>
          <div class="mt-3">
            <% if @reviews.any? %>
              <% @avg_review_score.to_i.times do %>
                <i class="star fa fa-star d-inline"></i>
              <% end %>
              (<%= @reviews.size %>)
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="p-4">
        <div class="text-center">
          <h2><strong><%= @book.title %></strong></h2>
        </div>
        <div class="card-body">
          <ul class="card-text">
          <div class="pb-3">
            <p><strong>Details:</strong>
            <%=@book.details %>
            </p>
            <p><strong>Author:</strong>
            <%= @book.author %>
            </p>
            <p><strong>Year:</strong>
            <%= @book.year %>
            </p>
          </div>
          </ul>
          <div class="d-flex justify-content-end pb-3">
            <%= link_to "Borrow", new_book_booking_path(@book), class: "button btn btn-light" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="card col-10 mx-auto justify-content-center shadow p-4">
      <div class="d-flex justify-content-between mx-3">
        <h3 class="mt-4"><strong>Reviews</strong></h3>
        <%= link_to "Add review", new_book_review_path(@book), class: "button btn btn-light my-3" %>
      </div>
        <ul class="list-group">
          <% @reviews.each do |review| %>
            <li class="list-group-item mb-3 border border-1"><%= review.content %></li>
          <% end %>
        </ul>
    </div>
  </div>
</div>
