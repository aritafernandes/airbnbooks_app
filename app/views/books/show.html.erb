
<div class="container d-flex flex-column">
  <div class="row justify-content-center">
    <div class="col-10 d-flex bg-white border-2 rounded-3 my-3">
      <div class= "book-image my-4 rounded mx-auto d-block">
      <% if @book.photo.attached? %>
        <%= cl_image_tag @book.photo.key, height: 300%>
      <% end %>
      </div>
      <div class="p-4">
        <div class="text-center">
          <h2><%= @book.title %></h2>
        </div>
        <div class="card-body">
          <ul class="card-text">
          <div class="pb-3">
            <p> Details:
            <%=@book.details %>
            </p>
            <p>Author:
            <%= @book.author %>
            </p>
            <p> Year:
            <%= @book.year %>
            </p>
          </div>
          </ul>
          <div class="d-flex justify-content-end pb-3">
            <%= link_to "Create Booking", new_book_booking_path(@book), class: "button btn btn-light" %>
          </div>
        </div>
      </div>
    </div>
  </div>

    <div class="row justify-content-center">
      <div class="w-10 d-flex justify-content-start mt-3">
        <%= link_to "Add review", new_book_review_path(@book), class: "button btn btn-light" %>
      </div>
      <div class="card col-5 me-auto justify-content-center mt-3">
        <p class="text-center p-3"><strong>Reviews</strong></p>
        <ul class="list-group">
          <% @book.reviews.each do |review| %>
            <li class="list-group-item"><%= review.content %></li>
          <% end %>
        </ul>
        <br>
      </div>
      <div class="col-5"></div>
    </div>


</div>



    <div class="d-flex justify-content-end m-4">
      <%= link_to "Back to index", root_path, class: "btn btn-light" %>
    </div>
