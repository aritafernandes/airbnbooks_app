<h1>Books#index</h1>
<% @books.each do |book| %>
  <ul>
    <li><%= book.title %></li>
    <%= link_to "book details", book_path(book), class: "btn btn-light" %>
    <%= link_to "delete", book_path(book), class: "btn btn-light", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this book from your list?" } %>

  </ul>
<% end %>
  <%= link_to "add a book", new_book_path, class: "btn btn-light" %>
