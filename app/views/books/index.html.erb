<div class="container">
  <div class="row">
    <div class="col6 my-5 d-flex justify-content-center flex-flow-column">
      <h1><strong>Books</strong></h1>
    </div>
  </div>
  <div class="cards">
      <% @books.each do |book| %>
        <div class="card p-4 d-flex flex-column justify-content-between">
        <div class="text-center">
          <h3 class="pb-3"><%= book.title %></h3>
        </div>
          <div class="d-flex justify-content-around">
            <%= link_to "Details", book_path(book), class: "button btn btn-light" %>
            <%= link_to "Delete", book_path(book), class: "btn btn-ghost", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this book from your list?" } if book.user == current_user %>
          </div>
        </div>
      <% end %>
  </div>
  <div class="my-5">
    <%= link_to "+ Add a Book", new_book_path, class: "button btn btn-light" %>
  </div>
</div>
