<div class="container">
  <div class="row">
    <div class="col6 my-5 d-flex justify-content-center flex-flow-column">
      <h1><strong>Books</strong></h1>
    </div>
  </div>
  <div class="cards">
      <% @books.each do |book| %>
        <div class="card p-4 d-flex flex-column justify-content-between">
          <h3 class="pb-3"><%= book.title %></h3>
          <div class="d-flex justify-content-around">
            <%= link_to "book details", book_path(book), class: "button btn btn-light" %>
            <%= link_to "delete", book_path(book), class: "button btn btn-light", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this book from your list?" } %>
          </div>
        </div>
      <% end %>
  </div>
  <div class="my-5">
    <%= link_to "add a book", new_book_path, class: "button btn btn-primary" %>
  </div>
</div>
