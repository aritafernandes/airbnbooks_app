<div class="container justify-content-start mt-2 ">
  <%= link_to books_path do %>
    <i class="fa-solid fa-arrow-left-long fa-2xl" style="color: #333"></i>
  <% end %>
</div>
<div class="container">
   <div class="row">
      <div class="text-center pt-5">
         <h2><strong>Create a book<strong></h2>
      </div>
      <div class="w-60 my-5 d-flex justify-content-center">
         <div class="card p-4">
            <%= simple_form_for(@book) do |f| %>
            <%= f.input :title %>
            <%= f.input :details, placeholder: "Max 500 characters" %>
            <%= f.input :author %>
            <%= f.input :year %>
            <%= f.input :photo, as: :file %>
            <% end %>
         </div>
      </div>
   </div>
</div>
