<div class="container">
   <div class="row">
      <div class="text-center pt-5">
         <h2><strong>Create a book<strong></h2>
      </div>
      <div class="w-60 my-5 d-flex justify-content-center">
         <div class="card p-4">
            <%= simple_form_for(@book) do |f| %>
            <%= f.input :title %>
            <%= f.input :details, placeholder: "Max 500 characters" %>
            <%= f.input :author %>
            <%= f.input :year %>
            <%= f.input :photo, as: :file %>
            <div class="d-flex justify-content-around">
               <%= f.submit class: "button btn btn-light"%>
               <%= link_to "Back to Books", books_path, class: "button btn btn-light" %>
            </div>
            <% end %>
         </div>
      </div>
   </div>
</div>
