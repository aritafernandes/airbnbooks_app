<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <div class="cards mb-5 d-flex justify-content-center flex-column">
        <div class="text-center mt-5 mb-4">
          <h2><strong>Requests</strong></h2>
        </div>
        <% @my_bookings.each do |booking|%>
          <div class="card" style="width: 30rem;">
            <div class="text-center p-3">
              <h2><%= booking.book.title %></h2>
            </div>
            <div class="justify-content-around text-center">
              <% if booking.pending? %>
              <div>
                <p>This booking is still pending</p>
              </div>
              <% else %>
              <div>
                <p>This booking was accepted</p>
              </div>
            </div>
            <% end %>
            <div class="d-flex justify-content-around p-4">
              <p>Start date: <%= booking.start_date%></p>
              <p>End date: <%= booking.end_date %></p>
            </div>
            <div class="d-flex justify-content-around pb-3">
              <%= link_to "Back to Books", books_path, class: "button btn btn-light" %>
              <%= link_to "Delete", booking_path(booking), class: "btn btn-ghost", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking from your list?" } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
