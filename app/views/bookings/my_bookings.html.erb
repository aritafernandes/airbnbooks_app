<div class="container justify-content-start mt-4 ">
  <%= link_to books_path do %>
    <i class="fa-solid fa-arrow-left-long fa-2xl" style="color: #333"></i>
  <% end %>
</div>
<div class="container">
   <div class="row">
      <div class="col-12 d-flex justify-content-center">
         <div class="cards mb-5 d-flex justify-content-center flex-column">
            <div class="text-center mt-5 mb-4">
               <h2><strong>Borrow Book</strong></h2>
            </div>
            <% @my_bookings.each do |booking|%>
              <div class="card shadow" style="width: 30rem;">
                <div class= "book-image my-4 rounded mx-auto d-block">
                  <% if booking.photo.attached? %>
                    <%= cl_image_tag booking.photo.key, height: 200 %>
                  <% end %>
                </div>
                <div class="text-center p-3">
                    <h2><%= booking.title %></h2>
                </div>
                <div class="justify-content-around text-center">
                  <% if booking.pending? %>
                    <div>
                      <p><strong>...still pending ðŸ¤”</strong></p>
                    </div>

                  <% elsif booking.accepted? %>
                    <div>
                      <p><strong>Yay! Accepted ðŸŽ‰</strong></p>
                    </div>
                  <% else %>
                    <div>
                      <p><strong>Maybe next time ðŸ˜¢</strong></p>
                    </div>
                  <% end %>
                </div>
               <div class="d-flex justify-content-around p-4">
                  <p>Start date: <%= booking.start_date%></p>
                  <p>End date: <%= booking.end_date %></p>
               </div>
               <div class="d-flex justify-content-around pb-3">
                  <%= link_to my_bookings_path(booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking from your list?" } do %>
                  <i class="fa-regular fa-trash-can" style="color:#333"></i>
                  <% end %>
               </div>
            </div>
            <% end %>
         </div>
      </div>
   </div>
</div>
