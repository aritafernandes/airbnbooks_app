<div class="container">
  <div class="row">
    <div class="col-12 my-5 d-flex justify-content-center">
      <div class="cards d-flex justify-content-center flex-column">
        <% @bookings.each do |booking|%>
          <div class="card" style="width: 30rem;">
            <div class="text-center p-3">
              <h2><%= booking.book.title %></h2>
            </div>
            <% if booking.pending? %>
              <div class="d-flex justify-content-around p-2">
                <%= button_to "accept", booking_accept_path(booking), class: "btn btn-light" %>
                <%= button_to "decline", booking_accept_path(booking), class: "btn btn-light" %>
              </div>
            <% end %>
            <div class="d-flex justify-content-around p-4">
              <p>Start date: <%= booking.start_date%></p>
              <p>End date: <%= booking.end_date %></p>
            </div>
            <div class="d-flex justify-content-around pb-3">
              <%= link_to "back to books", books_path, class: "btn btn-light" %>
              <%= link_to "delete", booking_path(booking), class: "btn btn-light", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking from your list?" } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
