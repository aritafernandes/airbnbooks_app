<div class="container">
  <div class="row">
    <div class="col-12 my-5 d-flex justify-content-center">
      <div class="w-60 my-5 d-flex justify-content-center flex-column">
        <div class="d-flex justify-content-center mb-3">
          <h1>New Booking</h1>
        </div>
        <div class="card p-3">
          <%= simple_form_for [@book, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <div class="d-flex justify-content-around p-3">
            <%= f.submit %>
            <%= link_to "back to books", books_path, class: "btn btn-light" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
