<div class="container">
  <div class="row">
    <div class="w-60 my-5 d-flex justify-content-center">
      <h1>New Booking</h1>
      <%= simple_form_for [@book, @booking] do |f| %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.submit %>
      <%= link_to "back to books", books_path, class: "btn btn-light" %>
      <% end %>
    </div>
  </div>
</div>
